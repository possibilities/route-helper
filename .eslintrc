{
  "parser": "babel-eslint",
  "env": {
    "mocha": true,
    "node": true,
    "es6": true
  },
  "ecmaFeatures": {
    "modules": true
  },
  "globals": {
    "expect": true
  },
  "rules": {
    "semi": [2, "never"],
    "strict": [2, "global"],
    "eol-last": [0],
    "quotes": [2, "single"],
    "no-mixed-requires": [0],
    "no-underscore-dangle": [0],
    "key-spacing": [0],
    "no-use-before-define": [0],
    "padded-blocks": 0,
    "no-use-before-define": [2, "nofunc"],
    "no-unused-expressions": 0
  }
}
